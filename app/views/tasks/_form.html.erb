<% if @task.errors.any? %>
<h4>These are the following errors : </h4>
  <ul>
  		<% @task.errors.full_messages.each do |msg| %>
  			<li><%= msg %></li>
        <% end %>
  </ul> 
<% end %>

<%= simple_form_for @task do |f| %>

<%= f.input :content %>

<%= f.button :submit %>
<!--<button type="button" class="btn btn-primary">Submit</button> -->



<% end %>	

<%= link_to 'Go back to all tasks', tasks_path %>